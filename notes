


docker run -d ... -e ORACLE_PWD=Nasirmehm123+ ...
CREATE TABLESPACE HFT_DATA   DATAFILE 'hft_data01.dbf' SIZE 500M AUTOEXTEND ON;


 -- 2. Create user with the new tablespace
 CREATE USER HFT_USER IDENTIFIED BY "Nasirmehm123+" DEFAULT TABLESPACE HFT_DATA TEMPORARY TABLESPACE TEMP QUOTA UNLIMITED ON HFT_DATA;



CREATE USER "HFT_USER" IDENTIFIED BY "Nasirmehm123+" DEFAULT TABLESPACE HFT_DATA TEMPORARY TABLESPACE TEMP QUOTA UNLIMITED ON HFT_DATA;


CREATE USER C##HFT_USER IDENTIFIED BY "Nasirmehm123+" DEFAULT TABLESPACE HFT_DATA TEMPORARY TABLESPACE TEMP QUOTA UNLIMITED ON HFT_DATA;

CREATE TABLESPACE HFT_DATA DATAFILE '/opt/oracle/oradata/XE/hft_data01.dbf' SIZE 500M AUTOEXTEND ON NEXT 100M EXTENT MANAGEMENT LOCAL SEGMENT SPACE MANAGEMENT AUTO;

CREATE USER HFT_USER IDENTIFIED BY "Nasirmehm123+" DEFAULT TABLESPACE HFT_DATA  TEMPORARY TABLESPACE TEMP QUOTA UNLIMITED ON HFT_DATA;



CREATE TABLESPACE HFT_DATA  DATAFILE '/opt/oracle/oradata/XE/XEPDB1/hft_data01.dbf' SIZE 500M AUTOEXTEND ON NEXT 100M MAXSIZE UNLIMITED EXTENT MANAGEMENT LOCAL SEGMENT SPACE MANAGEMENT AUTO;

CREATE USER HFT_USER IDENTIFIED BY "Nasirmehm123+" DEFAULT TABLESPACE HFT_DATA TEMPORARY TABLESPACE TEMP QUOTA UNLIMITED ON HFT_DATA;