                <!--          <version>3.2.0</version>-->
                <!--          <configuration>-->
                <!--            <archive>-->
                <!--              <manifest>-->
                <!--                <mainClass>com.example.facebookclone.*</mainClass>-->
                <!--              </manifest>-->
                <!--            </archive>-->
                <!--          </configuration>-->
                <!--        </plugin>-->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>

                    <configuration>
                        <source>17</source>
                        <target>17</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>